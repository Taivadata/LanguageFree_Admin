@page
@model LanguageClient.Pages.Login.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login</title>
    <!-- ==============FRAMEWORK, LIBRARY================ -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>
    <script src="https://unpkg.com/scrollreveal"></script>
    <!-- ==============STYLE================ -->
    <link rel="stylesheet" href="~/style/style_for_pages/style.css">
    <link rel="stylesheet" href="~/style/style_for_pages/setup.css">
    <link rel="stylesheet" href="~/style/style_for_pages/login.css">
    <link rel="shortcut icon" href="~/assets/images/logo/logo.png" type="image/x-icon">
</head>

<body>
    <div class="container animate-bg">
        <!-- ==============BUTTON TO DASHBOARD================ -->
        <a asp-page="Index" class="dashboard">dashboard</a>
        <!-- ==============FORM LOGIN================ -->
        <section class="form__login">
            <div class="screen">
                <div class="background__login">
                    <img src="~/assets/images/logo/logo_cochu_mautrang.png" alt="logo image" class="logo_image">
                    <p class="border__login">
                        <span class="desc__login">
                            &mdash; NICE TO SEE YOU AGAIN &mdash;
                        </span>
                        <span class="title__login">
                            WELCOME BACK
                        </span>
                    </p>
                    <p class="description_login">Here, you can access tools for managing and tracking utility
                        statistics, providing deeper insights into Language Free app trends based on accurate
                        statistical data.</p>
                </div>
                <div class="screen__content">
                    <form class="login">
                        <h3 class="login__title">ADMIN LOGIN</h3>
                        <div class="login__field">
                            <i class="login__icon fas fa-user"></i>
                            <input type="text" class="login__input" placeholder="Account name">
                        </div>
                        <div class="login__field">
                            <i class="pass__icon fas fa-lock"></i>
                            <input type="password" class="login__pass">
                            <span class="toggle__password">
                                <i class="hide__icon fa-solid fa-eye"></i>
                            </span>
                        </div>
                        <button class="login__submit" type="submit">
                            <span class="button__text">LOG IN NOW</span>
                            <i class="button__icon fas fa-chevron-right"></i>
                        </button>
                        <div class="social__login">
                            <span class="or__login">
                                ⸺ Or login with ⸺
                            </span>
                            <div class="social__button_contain">
                                <a href="#" class="social__button google__login">
                                    <img class="google__logo" src="~/assets/images/logo/google_logo.png" alt="">
                                    <p>Google</p>
                                </a>
                                <a href="#" class="social__button phone__login">
                                    <img class="phone__number__logo" src="~/assets/images/logo/phone_number_logo.png" alt="">
                                    <p>Phone Number</p>
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>

        <!-- ==============BACKGROUND ANIMATED================ -->
        <section class="bg__animate">
            <ul class="circles">
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
            </ul>
        </section>
    </div>

    <!-- ==============FRAMEWORK, LIBRARY================ -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- ==============SCRIPT================ -->
    <script src="~/js/javascript/script.js"></script>
    <script src="~/js/javascript/scrollreveal.js"></script>
    <script src="~/js/javascript/javascript_for_pages/login.js"></script>

</body>

</html>